@model object

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Cadastrar</h2>



<form action="/loja/cadastrar" method="post">
    <div class="form-group">
        <label for="id-nome">Nome</label>
        <input type="text" name="nome" id="id-nome" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-desc">Descricão</label>
        <input type="text" name="descricao" id="id-desc" class="form-control" />
    </div>
    <div class="form-group">
        <label for="id-preco">Preço</label>
        <input type="number" name="preco" id="id-preco" class="form-control" />
    </div>
   
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
</form>
